extends ../../layouts/default.pug

block main
  h1(class="mb-4") #{title}

  form(
    action=`${prefixAdmin}/my-account/edit?_method=PATCH`
    method="POST"
	enctype="multipart/form-data"
  )
    div(class="form-group")
      label(for="fullName") Họ tên *
      input(
        type="text"
        class="form-control"
        id="fullName"
        name="fullName"
        value=user.fullName
      )
    div(class="form-group")
      label(for="email") Email *
      input(
        type="email"
        class="form-control"
        id="email"
        name="email"
        required
        value=user.email
      )
    div(class="form-group")
      label(for="password") Mật khẩu *
      input(
        type="password"
        class="form-control"
        id="password"
        name="password"
        required
      )
    div(class="form-group")
      label(for="phone") Số điện thoại
      input(
        type="text"
        class="form-control"
        id="phone"
        name="phone"
        value=user.phone
      )
    div(
      class="form-group"
      upload-image
    )
      label(for="avatar") Avatar
      br
      input(
        type="file"
        class="form-control-file"
        id="avatar"
        name="avatar"
        accept="image/*"
        upload-image-input
      )
      br
      img(
        src=user.avatar ? user.avatar : "" 
        class="image-preview"
        upload-image-preview
      )
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary mt-2"
      ) Tạo mới