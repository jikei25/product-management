extends ../../layouts/auth.pug

block main
  .container.my-5
    .row.justify-content-center
      .col-8
        h1(class="text-center mb-4") Đăng nhập
        form(
          action=`${prefixAdmin}/auth/login`
          method="POST"
        )
          div(class="mb-3")
            label(for="email" class="form-label") Email
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            )
          div(class="mb-3")
            label(for="password" class="form-label") Mật khẩu
            input(
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            )
          button(
            type="submit"
            class="btn btn-primary w-100"
          ) Đăng nhập
