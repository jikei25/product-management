extends ../../layouts/default
block main
    h1 #{title}
    .card.mb-3
        .card-header Bộ lọc và Tìm kiếm
        .card-body
            each button in buttons 
                button(class=`btn btn-sm ml-1 btn-outline-success ${button.class}` button-status=`${button.status}`) #{button.content}
            
    .card.mb-3
        .card-header Sản phẩm
        .card-body
            table.table.table-hover.table-sm
                thead
                    tr
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        th Giá
                        th Trạng thái
                        th Hành động
                tbody
                    each item, index in products 
                        tr
                            td #{index + 1}
                            td 
                                img(src=item.thumbnail alt=item.title width=100 height=auto)
                            td #{item.title}
                            td #{item.price}$
                            td 
                                if (item.status=="active")
                                    a(href="#" class="badge bg-success") Hoạt động
                                else
                                    a(href="#" class="badge bg-danger") Dừng hoạt động
                            td 
                                button(class="btn btn-warning btn-sm") Sửa
                                button(class="btn btn-danger btn-sm ml-1") Xóa  


        